<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <valorpay_gateway>
            	<active>0</active>
                <model>ValorPay\CardPay\Model\Payment</model>
                <order_status>processing</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>ValorPay</title>
                <sandbox>1</sandbox>
                <show_logo>1</show_logo>
                <debug>0</debug>
                <currency>USD</currency>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <appid></appid>
                <appkey></appkey>
                <epi></epi>
                <authtoken></authtoken>
                <appid backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <appkey backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <epi backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <allowspecific>0</allowspecific>
                <specificcountry></specificcountry>
                <surchargeIndicator>0</surchargeIndicator>
                <surchargeType>percentage</surchargeType>
                <avs_type></avs_type>
                <surchargeLabel></surchargeLabel>
                <surchargePercentage>0</surchargePercentage>
                <surchargeFlatRate>0</surchargeFlatRate>
                <cctypes>AE,VI,MC,DI,JCB,DN</cctypes>
